<%- include('../partials/html-head') %>

<%- include('../partials/nav') %>

<main class="bg-light">
  <h1><%= title %> </h1>
  <div class="container py-5 px-3">
    <div 
      class="row row-cols-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g1 px-4"
    >
      <% recipes.forEach(recipe => { %>
        <div class="col">
          <a class="text-decoration-none" href="/recipes/<%= recipe._id %>">
            <div class="card" style="width: 18rem;">
              <div class="card-body">
                <h5 class="card-title"><%= recipe.name %> </h5>
                <h6 class="card-subtitle mb-2 text-muted">‚è±Ô∏è<%= recipe.prep + recipe.cook %> </h6>
                <p class="card-text"><%= recipe.servings %> </p>
                <a href="/recipes/<%= recipe._id %>/edit " class="card-link"><button type="button" class="btn btn-light">üìù</button></a>
                <form action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST">
                  <a href="/recipes/<%= recipe._id %>/edit " class="card-link"><button type="button" class="btn btn-light">‚ùå</button></a>
                </form>
              </div>
            </div>
          </a>
        </div>
      <% }) %>
    </div>
  </div>
</main>
<%- include('../partials/footer') %>