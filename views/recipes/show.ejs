<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <div class="flex-box">
  <div class=" recipe-content-card">
    <section>
    <div><span>Title:</span> <%= recipe.name %></div>
    <div><span>Servings:</span> <%= recipe.servings %></div>
    <div><span>Time to Prepare:</span>
    <% if (recipe.prep > 1) { %> 
    <%= recipe.prep %> Minutes</div>
    <% } else { %>
    <%= recipe.prep %> Minute</div>
    <% } %> 
    <div><span>Time to Cook:</span> 
    <% if (recipe.cook > 1) { %> 
    <%= recipe.cook %> Minutes</div>
    <% } else { %>
    <%= recipe.cook %> Minute</div>
    <% } %> 
    <div><span>Ingredients:</span></div>
    <div class="list-group">
    <% recipe.ingredients.forEach(function(ingredient) { %>
      <label class="list-group-item">
        <input class="form-check-input me-1" type="checkbox" value="">
        <%= ingredient %> 
      </label>
      <% }) %>
    </div>
    <div><span>Instructions:</span></div>
    <div class="list-group">
      <% recipe.description.forEach(function(step) { %>
        <label class="list-group-item">
          <input class="form-check-input me-1" type="checkbox" value="">
          <%= step %> 
        </label>
        <% }) %>
      </div> 
  </section>
<% if (recipe.owner.equals(user?.profile._id)) { %> 
  <span>Add Note</span>
  <form 
    id="add-notes-form"
    action="/recipes/<%= recipe._id %>/notes"
    method="POST"
  >
    <textarea name="content" id="content-textarea"></textarea>
    <button class=' btn btn-lg btn-outline-secondary'type="submit">Add Note</button>
  </form>
  <% } %> 

	<% if (recipe.notes.length) { %>
    <table>
      <thead>
        <tr>
          <th><span>Date</span></th>
          <th></th>
          <th><span>Note</span></th>
        </tr>
      </thead>
      <tbody>
        <% recipe.notes.forEach(function(note) { %>
          <tr>
            <td><%= note.createdAt.toLocaleDateString() %></td>
            <td></td>
            <td><%= note.content %></td>
            <td></td>
            <% if (recipe.owner.equals(user?.profile._id)) { %>
            
            <td> <a href="/recipes/<%= recipe._id %>/edit "><button type="button" class="btn btn-lg btn-outline-warning">üìù</button></a></td>
            <td><form action="/recipes/<%= recipe._id %>/notes/<%= note._id %>?_method=DELETE" method="POST">
            <button class="btn btn-lg btn-outline-warning">‚ùå</button>
            </form></td>
            <% } %> 
          </tr>
        <% }) %>
        <tr>
          <td colspan="2"></td>
          <td>
          </td>
        </tr>
      </tbody>
    </table>
  <% } else { %>
    <h3>No Notes Yet</h3>
  <% } %>
  </div>
  </div>
</main>


<%- include('../partials/footer') %>