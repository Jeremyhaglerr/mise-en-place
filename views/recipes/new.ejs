<%- include('../partials/html-head') %>
  <%- include('../partials/nav') %>

  <main>
    <h1><%= title %></h1>
    <div class="flex-box">
      <div class=" recipe-content-card">
        <form id="new-form" action="/recipes" method="POST">
          <label for="name-input"><span>Title:</span></label>
          <input type="text" name="name" id="name-input"  required>
          <br>
          <label for="servings-input"><span>Yield:</span></label>
          <input type="text" name="servings" id="servings-input" placeholder=" example: 16 cups" required>
          <br>
          <label for="prep-input"><span>Time to Prep:</span></label>
          <input type="text" name="prep" id="prep-input" placeholder=" example: 16 minutes" required>
          <br>
          <label for="cook-input"><span>Time to Cook:</span></label>
          <input type="text" name="cook" id="cook-input" placeholder=" example: 2 hours" required>
          <br>
          <label for="ingredients-input"><span>Ingredients:</span></label>
          <input type="text" name="ingredients" placeholder="seperate items by comma" id="ingredients-input" required>
          <br>
          <label for="description-input"><span>Instructions:</span></label>
          <input type="text" name="description" placeholder="seperate items by backslash " id="description-input" required>
          <br>
          <button type="submit">Publish Recipe</button>
        </form>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>