<%- include('../partials/html-head') %>
  <%- include('../partials/nav') %>

  <main>
    <h1><%= title %></h1>
    <form id="new-form" action="/recipes" method="POST">
      <label for="name-input">Title:</label>
      <input type="text" name="name" value= <%= recipe.name %>  id="name-input">
      <br>
      <label for="prep-input">Time to Prep:</label>
      <input type="text" name="prep"  value= <%= recipe.prep %> id="prep-input">
      <br>
      <label for="cook-input">Time to Cook:</label>
      <input type="text" name="cook" value= <%= recipe.cook %> id="cook-input">
      <br>
      <label for="servings-input">Servings:</label>
      <input type="text" name="servings" value= <%= recipe.servings %> id="servings-input">
      <br>
      <label for="ingredients-input">Ingredients:</label>
      <input type="text" value= <%= recipe.ingredients %> name="ingredients" id="ingredients-input">
      <br>
      <label for="description-input">Description:</label>
      <input type="text" value= <%= recipe.description %> name="description"  id="description-input">
      <br>
      <button type="submit">Publish Recipe</button>
    </form>
  </main>

  <%- include('../partials/footer') %>